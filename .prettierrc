{
	"singleQuote": false,
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 80,
	"trailingComma": "es5",
	"endOfLine": "auto",
	"arrowParens": "always",
	"quoteProps": "as-needed",
	"htmlWhitespaceSensitivity": "ignore",
	"plugins": [
		"@ianvs/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"importOrder": [
		"^(react/(.*)$)|^(react$)|^(react-(.*)$)",
		"^(next/(.*)$)|^(next$)|^(next-(.*)$)",
		"",
		"<THIRD_PARTY_MODULES>",
		"",
		"^@/(.*)$",
		"",
		"^[./]"
	],
	"tailwindFunctions": ["clsx", "cva"]
}
